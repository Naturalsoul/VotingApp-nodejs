extends ./_layout.jade
block content
    .container
        form
            .row
                .col.s12
                    .row
                        .input-field.col.s12.m6
                            i.material-icons.prefix account_circle
                            input#username.validate(type="text")
                            label(for="username") Username
                        .input-field.col.s12.m6
                            i.material-icons.prefix email
                            input#email.validate(type="email")
                            label(for="email") Email
                        .input-field.col.s12.m6
                            i.material-icons.prefix lock_outline
                            input#pass.validate(type="password")
                            label(for="pass") Password
                        .input-field.col.s12.m6
                            i.material-icons.prefix https
                            input#pass2.validate(type="password")
                            label(for="pass2") Repeat the Password
                        .input-field.col.s12.center-align
                            button.btn.waves-effect.waves-light(type="submit", name="action") Submit
                                i.material-icons.right send