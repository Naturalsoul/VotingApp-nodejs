extends ./_layout.jade
block content
    .container
        form
            .row
                .col.s12
                    .row
                        .input-field.col.s12.m6
                            i.material-icons.prefix account_circle
                            input#username-login.validate(type="text")
                            label(for="username-login") Username
                        .input-field.col.s12.m6
                            i.material-icons.prefix lock_outline
                            input#pass-login.validate(type="password")
                            label(for="pass-login") Password
                    .row
                        .input-field.col.s12.center-align
                            a.btn.waves-effect.waves-light(type="submit", name="login-action") Log In
                                i.material-icons.right lock_open